<%- include('partials/header'); %>
<div class="container">
    <div class="row">
        <% if(records){    %>
        <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Edit Employee </div>
                     </div>  
                <div class="panel-body" >
                    <form action="/employee/edit/" id="EmployeeForm" class="form-horizontal" method="post"  role="form">
                      <input type="hidden" name="id" value="<%= records._id %>">
                        <div class="form-group">
                       
                            <label for="username" class="col-md-3 control-label">Employee Name</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="employee_name" value="<%= records.Emp_Name %>" placeholder="Enter  Employee Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="username" class="col-md-3 control-label">Employee Code</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="emp_code"  value="<%= records.Employee_Code %>" placeholder="Enter Employee Code">
                            </div>
                          </div>
                        <div class="form-group">
                            <label for="username" class="col-md-3 control-label">Department Name</label>
                            <div class="col-md-9">
                               <select class="form-control" name="emp_depart_name">
                                   <option value="">Select Department</option>
                                   <% if(data.length > 0){
                                    data.forEach(function(row){
                                    %>
                                    <option value="<%= row.Dep_Name %>" <% if(row.Dep_Name==records.Department){ %> selected <% } %>><%= row.Dep_Name %></option>
                                   <%  }) } %>
                                  </select>
                            </div>
                        </div>
                        <!-- <div class="form-group">
                       
                            <label for="username" class="col-md-3 control-label">Empployee Code</label>
                            <div class="col-md-9">
                                <input type="date" class="form-control" name="employee_doj" ##value="##<%= records.DOJ %>##"  placeholder="Enter Employee Name">
                            </div>
                        </div> -->
                        <div class="form-group">
                                                                 
                            <div class="col-md-offset-3 col-md-9">
                            <input type="submit" name="submit" value="Update Employee Details" class="btn btn-primary">   
                            </div>
                        </div>
                        
                        <p><a href="/EmployeesDetails/1">View All Employees List</a></p>
                         
                        
                        
                        
                    </form>
                 </div>
            </div>

       
       
        
 </div> 
 <%   } %>
    </div>
  </div>
  <%- include('partials/footer'); %>